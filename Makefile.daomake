
PLATS = linux macosx freebsd mingw minix haiku

MODE ?= release
ROOT ?= /usr/local
SRCDIR ?= .
SUFFIX ?=
JAVASCRIPT ?= OFF
RESET ?=

#export EMCC="python /Users/min/SoftwareDevs/emscripten/emcc"

$(PLATS) :
	cd $(SRCDIR)/tools/daomake/bootstrap && $(MAKE) $@
	$(SRCDIR)/tools/daomake/bootstrap/daomake --mode $(MODE) --platform $@ --option-ROOT-PATH $(ROOT) --option-JAVASCRIPT $(JAVASCRIPT) $(RESET) $(SRCDIR)
	$(MAKE) -f Makefile$(SUFFIX)

