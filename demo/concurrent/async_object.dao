load sys

class Test !!
{
	routine Task1( chan : mt::channel<int> ){
		while(1){
			data = chan.receive()
			io.writeln( "Task1", data )
			if( data.status == $finished ) break
		}
	}
	routine Task2(){
		for( i = 1 : 5 ){
			io.writeln( "Task2", i )
			sys.sleep(0.5);
		}
	}
}

test = Test()

chan = mt::channel<int>(1)

test.Task1( chan )
test.Task2()

io.writeln( "Start to send message" )

for( i = 1 : 5 ){
	io.writeln( "sending", 100*i )
	chan.send( 100*i )
	sys.sleep(0.5)
}
chan.cap(0)

routine main(){
	for(i=1:10){
		io.writeln( "main()" )
		sys.sleep(0.5)
	}
}
