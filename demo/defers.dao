
routine Test()
{
	mat = [ 1 : 1000 ];

	# defer (name) {} will pass the returning value of Test()
	# to the deferred codes, and so that it can be updated:
	defer (result) {
		io.writeln( 'deferred 1' )
		mat.resize( [0] )
		result += 456
	}
	defer (result) {
		result += 10000
	}

	for( i = 2 : 5 ) defer { io.writeln( 'deferred', i ) }

	io.writeln( 'returning' );
	return 123
}

io.writeln( Test() )
