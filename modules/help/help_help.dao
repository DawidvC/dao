load help;
load sys;

global ctype = sys.getenv( 'LANG' );
if( ctype == '' ) ctype = sys.setlocale( $ctype );

global lang = '_en';

if( ctype.find( 'zh' ) == 0 or ctype.find( 'Zh' ) == 0 or ctype.find( 'ZH' ) == 0 ) lang = '_zh';

routine main()
{
	std.load( 'help_help' + lang );
}
